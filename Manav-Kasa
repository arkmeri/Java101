import java.util.Scanner;
public class Manav {
    public static void main(String[] args) {
    Scanner inp= new Scanner(System.in);
    double elma,armut,domates,muz,patlican,tutar;
    double elmafiyati=3.67,domatesfiyati=1.11,armutfiyati=2.14,muzfiyati=0.95,patlicanfiyati=5.00;
        System.out.print("Kaç kg armut? : ");
        armut= inp.nextDouble();
        System.out.print("Kaç kg elma? : ");
        elma= inp.nextDouble();
        System.out.print("Kaç kg domates? : ");
        domates= inp.nextDouble();
        System.out.print("Kaç kg muz? : ");
        muz= inp.nextDouble();
        System.out.print("Kaç kg patlıcan? : ");
        patlican= inp.nextDouble();

        tutar= (armut*armutfiyati)+(elmafiyati*elma)+(domatesfiyati*domates)+(muzfiyati*muz)+(patlicanfiyati*patlican);
        System.out.println("Toplam tutar:" +tutar);
}
}

